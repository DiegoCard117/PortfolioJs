{
  "ts-node": {
      // Do not forget to `npm i -D tsconfig-paths`
      "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
      "jsx": "react",
      "lib": ["es2017","es5", "es6", "es7", "DOM"],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strict": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "sourceMap": true,

      "baseUrl": ".",
      "paths": {
          "@modules/*": ["src/modules/*"],
          "*": ["node_modules/*"]
      },

  },
  "include": ["src/**/*"]
}